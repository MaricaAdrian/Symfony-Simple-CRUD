{% extends 'base.html.twig' %}


{% block title %}Admin - {{ admin.username }}{% endblock %}
{% block body %}
    <p>
        ID: <strong>{{ admin.id }}</strong>
    </p>
    <p>Name: <strong>{{ admin.username }}</strong></p>
    <p>
        Email:
        <strong>{{ admin.email }}</strong>
    </p>
    <p>
        Role:
        <strong>{% for role in admin.roles %} {{role}} {% endfor %}</strong>
    </p>
    <hr />
    <a href="/admin/profile/edit">Edit profile</a>
    <br />
    <a href="/admin">Go back</a>
{% endblock %}
